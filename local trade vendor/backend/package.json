{
  "name": "tradelink-backend",
  "version": "1.0.0",
  "description": "TradeLink marketplace backend API",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "npx prisma generate && tsc",
    "start": "node dist/index.js",
    "vercel-build": "npx prisma generate && npx prisma migrate deploy && tsc",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "db:migrate": "npx prisma migrate dev",
    "db:generate": "npx prisma generate",
    "db:seed": "ts-node src/scripts/seed.ts"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "socket.io": "^4.7.4",
    "@prisma/client": "^5.7.0",
    "redis": "^4.6.11",
    "@anthropic-ai/sdk": "^0.9.1",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.0",
    "dotenv": "^16.3.1",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.9.4",
    "typescript": "^5.2.2",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.1",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.16",
    "prisma": "^5.7.0",
    "fast-check": "^3.15.0"
  }
}