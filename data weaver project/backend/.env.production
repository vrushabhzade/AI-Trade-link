# Production Environment Configuration
# Pigeon-Crypto Dashboard Backend

# Server Configuration
NODE_ENV=production
PORT=3001
HOST=0.0.0.0

# Frontend Configuration
FRONTEND_URL=https://pigeon-crypto-dashboard.com

# Database Configuration
DATABASE_PATH=./data/production.db
DATABASE_BACKUP_ENABLED=true
DATABASE_BACKUP_INTERVAL=86400000

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# API Keys (Set these in your deployment environment)
COINGECKO_API_KEY=
COINMARKETCAP_API_KEY=
EBIRD_API_KEY=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Performance Configuration
MAX_CONCURRENT_USERS=1000
CACHE_TTL_CRYPTO=300000
CACHE_TTL_PIGEON=600000
CACHE_TTL_CORRELATION=900000

# Security Configuration
HELMET_ENABLED=true
CORS_ENABLED=true
TRUST_PROXY=true

# Monitoring and Logging
LOG_LEVEL=info
ERROR_REPORTING_ENABLED=true
PERFORMANCE_MONITORING_ENABLED=true

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=1000

# Data Retention (in days)
RETENTION_CRYPTO_DAYS=30
RETENTION_PIGEON_DAYS=30
RETENTION_CORRELATION_DAYS=7
RETENTION_PREFERENCES_DAYS=90