{
  "name": "tradelink-marketplace",
  "version": "1.0.0",
  "description": "AI-powered local trade marketplace platform",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd frontend && npm test",
    "test:backend": "cd backend && npm test",
    "diagnose": "node scripts/diagnose-deployment.js",
    "fix-deployment": "node scripts/fix-deployment-issues.js",
    "deploy-check": "npm run fix-deployment && npm run diagnose"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}